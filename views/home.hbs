<div class="container">
  <div class="text-center mt-5">
    <h1>Recibo de Entrega</h1>
  </div>
  <div class="row">
    <div class="col-lg-7 mx-auto">
      <div class="card mt-2 mx-auto p-4 bg-light">
        <div class="card-body bg-light">
          <form id="addRecibo">
            <div class="form-group">
              <label for="form_local">Local de Entrega</label>
              <input id="form_local" name="local" class="form-control" required="required"
                placeholder="Local de entrega dos produtos">
            </div>
            <div class="form-group">
              <label for="form_tot">Valor Total do Recibo *</label>
              <input id="form_tot" name="total" class="form-control" placeholder="Total do recibo" required="required">
            </div>
            <div class="row">
              <div class="col-md-5">
                <div class="form-group">
                  <label for="form_produto">Produto</label>
                  <input id="form_produto" class="form-control">
                </div>
              </div>
              <div class="col-md-5">
                <div class="form-group">
                  <label for="form_qtd">Quantidade</label>
                  <input id="form_qtd" type="number" class="form-control" placeholder="Quantidade">
                </div>
              </div>
              <div class="col-md-2">
                <div class="form-group" style="margin-top: 25px;margin-right: 10px;">
                  <i id="icone" class="bi bi-plus-circle" style="font-size:2rem; color: cornflowerblue;"></i>
                </div>
              </div>
            </div>
            <div class="text-center mt-5">
              <h4>Produtos</h4>
            </div>
            <div class="row">
              <div class="col-md-12">
                <table id="tabela" name="tabela1" class="table table-striped w-100">
                  <thead>
                    <tr>
                      <th>Produto</th>
                      <th>Quantidade</th>
                      <th>Ação</th>
                    </tr>
                  </thead>
                  <!-- Table body will be dynamically populated -->
                </table>
              </div>

            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="text-center mt-5">
                  <h4>Assinatura</h4>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div id="containerAssinatura">
                  <canvas id="signature-pad" width="500" height="200"></canvas>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <input type="button" id="btn-recuperar-dados" class="btn btn-success btn-send pt-2 btn-block"
                  onclick="enviarDadosTabela()" value="Gerar Recibo">
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>